<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/common_size_10">

    <TextView
        android:id="@+id/tv"
        android:layout_width="@dimen/common_size_0"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/common_text_size_16" />

    <Button
        android:id="@+id/delete"
        android:layout_width="@dimen/common_size_40"
        android:layout_height="@dimen/common_size_40"
        android:layout_marginLeft="@dimen/common_size_10"
        android:text="x" />

</LinearLayout>